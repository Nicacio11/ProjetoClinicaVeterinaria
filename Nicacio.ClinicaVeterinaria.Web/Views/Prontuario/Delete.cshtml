<h3>Tem certeza que deseja apagar:?</h3>
	<h4>Prontuario</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.MedicoNome)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.MedicoNome)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.AnimalNome)
