@model Nicacio.ClinicaVeterinaria.Web.ViewModels.Animal.AnimalViewModel

@{
	ViewBag.Title = "Apagar";
}

<div class="container">

	<h3>Deseja realmente apagar o Registro?</h3>
	@Html.ValidationMessage("erro_fk", new { @class = "text-danger" })
	<div>
		<hr />
		<dl class="dl-horizontal">
			<dt>
				@Html.DisplayNameFor(model => model.Nome)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Nome)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Raca)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Raca)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.NomeDono)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.NomeDono)
			</dd>

		</dl>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="form-actions no-color">
				<input type="submit" value="Apagar" class="btn btn-default" /> |
				@Html.ActionLink("Voltar", "Index")
			</div>
		}
	</div>
</div>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}